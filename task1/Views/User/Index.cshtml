<body>
    <div class="card-deck">
        @foreach(var item in ViewBag.Book)
        {
            <form action="/User/Categoryy" method="post" enctype="multipart/form-data">
            <div class="card">
                <img class="card-img-top" src="~/wwwroot/img" alt="@item.Photo">
               
                <div class="card-body">
                        <h5 eni="@item.CategoryId" class="card-title">@item.BookName</h5>
                    <p class="card-text">@item.BookPrice</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
                </div>
            </form>
        }

        <select name="Id">
            @foreach (var item in ViewBag.Category)
            {
                <option filter="@item.CategoryName" value="@item.Id">@item.CategoryName</option>
            }

        </select>
    </div>

    

